<!-- dialog delete -->
<div class="modal fade" id="dialogConfirmDelete" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This procedure can not be undone, Are your sure you want to delete this Post?
      </div>
      <div class="modal-footer --nav-list">
        <button type="button" class="btn__global btn__cancel fw_600" data-bs-dismiss="modal">Close</button>
        <button class="btn__global btn__delete-answer fw_600 text-decoration-none"
          data-post-id="<%= post[0].post_id %>">Confirm Delete
          <span class="spinner-border spinner-border-sm d-none loading-spinner" role="status" aria-hidden="true"></span>
        </button>
      </div>
    </div>
  </div>
</div>