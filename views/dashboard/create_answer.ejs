<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include("../partial/head") %>
      <script src="/tinymce/tinymce.min.js"></script>
      <script src="/dist/form.compiled.js"></script>

  </head>

  <body>
    <div class="container">
      <%- include("../partial/error_alert.ejs") %>
        <form method="POST" action="/evsu-insider/share-answer">
          <div class="--nav-item d-flex justify-content-start align-items-center w-100 my-2 mx-1">
            <a class="text-decoration-none --nav-link f_size-2" href="/evsu-insider/dashboard">&leftarrow; Back to
              Dashboard</a>
          </div>
          <div class="row">
            <div class="col-lg-4">
              <!-- Title -->
              <div class="group">
                <input class="__material-input" type="text" name="post_title" required>
                <span class="bar"></span>
                <label class="__material-label">Title</label>
              </div>
            </div>
            <div class="col-lg-4">
              <!-- Subject -->
              <div class="group">
                <select class="__material-input" name="post_subject" id="postSubject" required>
                  <% subject.forEach(subj => { %>
                    <option value="<%= subj.subject_id %>"><%= subj.subject_name %> </option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="col-lg-4">
              <!-- Tag -->
              <div class="group">
                <input class="__material-input" type="text" name="post_tag" required>
                <span class="bar"></span>
                <label class="__material-label">Tag/Unit</label>
              </div>
            </div>
          </div>
          <!-- Body -->
          <textarea class="--share-answer-form" name="post_body" id="shareAnswerForm"></textarea>
          <div class="d-flex justify-content-lg-start justify-content-center align-items-center w-100 my-2 mx-1">
            <input class="btn__global form-control-sm mx-1 my-2 fw_600 f_size-2" type="submit" value="Post Answer ðŸ˜Ž">
          </div>
        </form>
    </div>
  </body>
</html>