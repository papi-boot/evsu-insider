<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include("../partial/head") %>
    <meta name="author" content="<%= post[0].user_fullname %>">
    <meta name="description" content="<%= post[0].post_title %> | <%= post[0].post_tag %> | <%= post[0].subject_name %>">
    <meta name="keyword" content="<%= post[0].post_title %> | <%= post[0].post_tag %> | <%= post[0].subject_name %>">
    <link rel="stylesheet" href="/dist/prism.css">
    <script src="/tinymce/tinymce.min.js"></script>
    <script src="/dist/comment_form.compiled.js"></script>
  </head>

  <body id="showPost">
    <div class="divider div-primary-bg-color"></div>
    <%- include("../partial/navbar") %>
      <div class="container my-5">
        <div class="row">
          <div class="col-lg-9">
            <main class="main__specific-post border px-3 px-xl-4 mb-3">
              <%- include("../data/specific_post") %>
              <div class="comment__section position-relative my-4">
                <h4 class="my-2 secodnary-heading">Leave a comment.</h4>
                <%- include("../data/comment") %> 
              </div>
            </main>
          </div>  
          <div class="col-lg-3">
            <aside class="aside__specific-quick-links aside__quick-links border px-2 mb-3">
              <h6 class="mt-4">Explore more</h6>
              <div class="subject_list">
                <%- include("../data/subject_list") %>
              </div>
              <div class="related__post my-4 border p-3">
                <h6 class="fw_700 primary-heading">More on > <span><a class="p-theme-color" href="/subjects?subject_id=<%= req.query.subject_id %>"><%= post[0].subject_name %></span></a></h6>
                <%- include("../data/related_post") %>
              </div>
            </aside>
          </div>
        </div>
        
      </div>
      <%- include("../partial/script") %>
      <script src="/dist/prism.compiled.js" async></script>
  </body>

</html>