<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include("../partial/head") %>
  </head>

  <body>
    <div class="container">

      <div class="d-flex justify-content-center align-items-center h-vh p-2">
        <form class="form__container-register a_bounce-in" method="POST" action="/sign-up">
          <img class="logo d-block mx-auto" alt="Evsu Insider">
          <h2 class="text-center primary-heading my-4 fw_700 p-theme-color a_from-left">Join Today</h2>

          <%- include("../partial/error_alert") %>
            <!-- name -->
            <input type="text" name="name" class="d-block input__global my-3 mx-auto fw_600 reg_user_name" id="userName"
              placeholder="Name" required>
            <!-- email -->
            <input type="email" name="email" class="d-block input__global my-3 mx-auto fw_600 reg_user_email" id="userEmail"
              placeholder="Email" required>
            <!-- password -->
            <div class="password__field my-3">
              <input type="password" name="password" class="d-block input__global mx-auto fw_600 reg_user_password" id="userPassword"
                placeholder="Password" required>
                <p class="f_size-3 text-danger fw_600 mt-1 d-none password__checker">Password should be at least 8 characters long. <i class="bi bi-check-circle-fill f_size-1 d-none"></i></p>
            </div>
            <!-- confirm password -->
            <div class="password_confirm_field my-3">
              <input type="password" name="confirm_password" class="d-block input__global mx-auto fw_600 reg_user_confirm_password"
                id="userConfirmPassword" placeholder="Confirm Password" required>
                <p class="f_size-3 text-danger fw_600 mt-1 d-none confirm__password-checker">Password do not match  </p>
            </div>
            <div class="form-check">
              <input class="form-check-input remember-me show__password" type="checkbox" id="showPassword" value="0">
              <label class="form-check-label fw_500" for="showPassword">
                Show Password
              </label>
            </div>
            <!-- submit button -->
            <input class="d-block btn__global my-3 mx-auto fw_600" type="submit" value="Count me in">
            <!-- sign in link -->
            <a class="text-dark d-block text-center mx-auto my-4 fw_600" href="/sign-in">Already
              Joined? Sign in instead.</a>
        </form>
      </div>

    </div>
    <!-- <%- include("../partial/footer") %> -->
    <%- include("../partial/script") %>
  </body>

</html>