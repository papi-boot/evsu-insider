<% if (subject.length > 0) { %>
  <% subject.forEach( item => { %>
    <div class="col-lg-3">
      <a class="subject-clickable text-decoration-none" href="/evsu-insider/subjects/<%= item.subject_name %>">
        <div class="subject__folder">
          <div class="subject__header">
            <h5 class="subject__title primary-heading m-0"><%= item.subject_name %> ğŸ“„</h5>
          </div>
          <div class="subject__sub-header">
            <h6 class="subject__description primary-heading text-black-50 f_size-2 m-0"><%= item.subject_description %> </h6>
            <h6 class="subject__semester primary-heading text-black-50 f_size-2">Semester: <%= item.subject_quarter %> </h6>
            <h6 class="subject__created text-black-50 primary-heading f_size-3 fw_700"><%= format(add(item.subject_created_at, {hours: 8}), 'MMMM yyyy' ) %></h6>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
<% } else { %>
  <div class="alert alert-warning d-flex justify-content-center align-items-center p-2 alert-text fw_600 my-3 z-index-n1" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
      class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
      <path
        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    <div>
      Service Unavailable. It will take effect until subject has been set
    </div>
  </div>
<% } %>